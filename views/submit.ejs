<%- include('partials/header') %>

  <div class="container text-center pt-5">
    <div class="jumbotron p-5">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3">Secrets</h1>
      <p class="secret-text">Don't keep your secrets, share them anonymously!</p>
      <hr>

      <form action="/submit" method="POST">
        <div class="form-group">
          <input type="hidden" name="date" value="<%= thisDate %>">
          <input type="hidden" name="username" value="<%= username %>">
          <input type="text" class="form-control text-center mb-2" name="secret" placeholder="What's your secret?" autocomplete="off" required>
          <input type="checkbox" name="anonymous"><span class="px-2">Whisper your name?</span>
          <br>
          <button type="submit" class="btn btn-dark mt-2">Submit</button>
        </div>
      </form>


    </div>
  </div>
  <%- include('partials/footer') %>