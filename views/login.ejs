<%- include('partials/header') %>

  <div class="container mt-5">
    <h1>Login</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <p class="error" <% if(error !='email' ) { %> hidden <% } %>>Not valid email.</p>
                <p class="error" <% if(error !='password' ) { %> hidden <% } %>>Not valid password.</p>
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username" required>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" required>
              </div>
              <button type="submit" class="btn btn-dark mt-2">Login</button>
            </form>

          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-google w-100 text-center" href="/auth/google" role="button">
              <i class="fa-brands fa-google"></i>
              Sign In with Google
            </a>
          </div>
          <div class="card-body">
            <a class="btn btn-block btn-social btn-facebook w-100 text-center" href="/auth/facebook" role="button">
              <i class="fa-brands fa-facebook"></i>
              Sign In with Facebook
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>